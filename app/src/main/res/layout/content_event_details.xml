<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sareenaith.theeventfinder.EventDetailsActivity"
    tools:showIn="@layout/activity_event_details">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            style="@style/bigTitle"
            android:id="@+id/eventDetails_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="" />

        <TextView
            android:id="@+id/eventDetails_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:text=""
            android:layout_below="@+id/eventDetails_name"
            android:layout_alignLeft="@+id/eventDetails_name"
            android:layout_alignStart="@+id/eventDetails_name" />

        <TextView
            android:id="@+id/eventDetails_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/eventDetails_description"
            android:layout_alignStart="@+id/eventDetails_description"
            android:layout_below="@+id/eventDetails_description"
            android:layout_marginTop="30dp"
            android:text="" />

        <TextView
            android:id="@+id/eventDetails_genderRestrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/eventDetails_time"
            android:layout_alignStart="@+id/eventDetails_time"
            android:layout_below="@+id/eventDetails_time"
            android:layout_marginTop="30dp"
            android:text="" />

        <TextView
            android:id="@+id/eventDetails_attendees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/eventDetails_genderRestrict"
            android:layout_alignStart="@+id/eventDetails_genderRestrict"
            android:layout_below="@+id/eventDetails_genderRestrict"
            android:layout_marginTop="30dp"
            android:text="" />

        <Button
            style="@style/buttonStyle"
            android:id="@+id/eventDetails_attendBtn"
            android:layout_height="wrap_content"
            android:background="@drawable/default_button"
            android:layout_marginEnd="120dp"
            android:layout_marginRight="120dp"
            android:text="Attend Event"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
