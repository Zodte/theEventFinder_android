<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    tools:context=".EventInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp"
        android:layout_weight="1"
        android:background="@drawable/border_shadow"
        android:elevation="5dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/eventInfo_eventInfoImgId_img"
            android:contentDescription="@string/eventInfo_eventInfoImg_txt"
            android:src="@drawable/blastoise_profile"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:text="event name here"
            android:textSize="20sp"
            android:layout_marginBottom="6dp"
            android:id="@+id/eventInfo_eventNameId_txt"
            android:layout_above="@+id/eventInfo_eventBiography"
            android:layout_toRightOf="@+id/eventInfo_eventInfoImgId_img"
            android:layout_toEndOf="@+id/eventInfo_eventInfoImgId_img"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <TextView
            android:text="other thing.."
            android:textSize="13sp"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/eventInfo_eventBiography"
            android:layout_alignBottom="@+id/eventInfo_eventInfoImgId_img"
            android:layout_alignLeft="@+id/eventInfo_eventNameId_txt"
            android:layout_alignStart="@+id/eventInfo_eventNameId_txt" />

    </RelativeLayout>


</LinearLayout>